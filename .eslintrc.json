{
  "env": {
    "browser": true,
    "es6": true
  },
  "parser": "babel-eslint",
  "extends": ["airbnb", "prettier"],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 2018
  },
  "overrides": [
    {
      "files": ["src/**/*.js"],
      "rules": {
        "quotes": [2, "single"]
      }
    }
  ],
  "plugins": ["react", "prettier"],
  "rules": {
    "prettier/prettier": ["warn"],
    "object-curly-newline": [
      "warn", {  "consistent": true }
    ]
  }
}
